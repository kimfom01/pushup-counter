generator client {
  provider   = "prisma-client"
  output     = "./generated"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      Int      @id @default(autoincrement())
  clerkId String   @unique
  email   String   @unique
  name    String
  pushups Pushup[]
}

model Pushup {
  id     Int      @id @default(autoincrement())
  userId Int
  user   User     @relation(fields: [userId], references: [id])
  count  Int
  date   DateTime @default(now())
}
